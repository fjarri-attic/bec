\renewcommand{\title}[1]{%
\begin{centering}\Large\bf #1 \addcontentsline{toc}{section}{#1} \\[1mm]\end{centering}}

\renewcommand{\author}[3]{#1~#2$^{#3}$}

\newenvironment{authors}{\begin{center}}{\end{center}}

\newcommand{\begintext}{~\\[1mm]}

\newcommand{\address}[2]{{\centering $^#1$\textit{#2}\\}}

\renewcommand{\caption}[2]{Figure~#1: \textit{#2}\\[1.7mm]}

\renewcommand\label{%
{\em ---Please do not use labels, reference instead manually--- \newpage}}

\renewcommand\ref{%
{\em ---Please reference to figures manually--- \newpage}}

\renewcommand\cite{%
{\em ---Please reference using the footnote---command-- \newpage}}

